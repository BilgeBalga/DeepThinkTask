@model DeepThinkTask.Models.Slider
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Slider Düzenle";
}

<div class="row">
    <div class="col-md-6">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Slider Düzenle</h3>
            </div>
            <form asp-action="SliderEdit" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImagePath" /> <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order"></label>
                        <input asp-for="Order" class="form-control" type="number" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Mevcut Görsel</label>
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="~/@Model.ImagePath" alt="Mevcut Görsel" style="width: 150px; height: auto; display: block; margin-bottom: 10px;">
                        }
                        else
                        {
                            <p>Görsel Yok</p>
                        }
                        <label>Yeni Görsel Yükle</label>
                        <input type="file" name="ImageFile" class="form-control" />
                        <span class="text-muted">Mevcut görseli değiştirmek için yeni bir görsel seçin.</span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Güncelle</button>
                    <a asp-action="Sliders" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}